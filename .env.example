# Copy to .env and fill in.

# Karachi (next 3 days AQI prediction)
AQI_CITY=Karachi
AQI_LAT=24.8607
AQI_LON=67.0011
AQI_TIMEZONE=Asia/Karachi

# Set to false to use only OpenWeather (when Open-Meteo DNS/network fails)
USE_OPENMETEO_AQI=false
# OpenWeather: AQI 1-5 scale (no normalization when using only this API)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# MongoDB: local or Atlas URI
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=aqi_predictor

# AQI scale: 1-5 (OpenWeather) or US 0-500 (Open-Meteo)
AQI_SCALE_1_5=true
